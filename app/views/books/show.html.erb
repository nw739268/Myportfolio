<main>
  <%= flash[:notice] %>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'users/list', book: @book, user: @user, book_2: @book_2 %>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
              <tr>
                  <td><%= link_to user_path(@book_2.user) do %>
                        <%= attachment_image_tag @user, :profile_image, fallback: "default-image.jpg" %>
                      <% end %>
                      <%= link_to @book_2.user.name, user_path(@user.id) %> 
                  </td>
                  <td><%= link_to book_path(@book_2.id) do %>
                        <%= @book_2.title %>
                      <% end %>
                  </td>
                  <td><%= @book_2.body %></td>
                    <% if @book_2.user_id == current_user.id %>
                      <td><%= link_to "Edit", edit_book_path(@book_2.id), class: "btn btn_sm btn-success" %></td>
                      <td><%= link_to "Destroy", book_path(@book_2), class: "btn btn_sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
              </tr>
                <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>